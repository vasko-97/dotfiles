{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.39/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 3,
  "default_container_padding": 3,
  "border": true,
  "border_width": 8,
  "manage_rules": [
    {
      // not sure why but KeePassXC does not get managed unless specified here explicitly
      "kind": "Exe",
      "id": "KeePassXC.exe",
      "matching_strategy": "Equals"
    }
  ],
  "border_offset": -1,
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "unfocused_border": "Base03",
    "bar_accent": "Base0D"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1 - Browser",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "brave.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "2 - Communications",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "ms-teams.exe",
              "kind": "Exe"
            },
            {
              "id": "olk.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "3 - Rider",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "rider64.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "4 - DataGrip",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "datagrip64.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "5 - Terminal",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "WindowsTerminal.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "6 - Keepass/Spotify",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "KeePassXC.exe",
              "kind": "Exe"
            },
            {
              "id": "Spotify.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "7 - File Explorer",
          "layout": "Columns",
          "workspace_rules": [
            {
              "id": "explorer.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "8 - Misc",
          "layout": "Columns"
        },
        {
          "name": "9 - Misc",
          "layout": "Columns"
        }
      ]
    }
  ]
}
